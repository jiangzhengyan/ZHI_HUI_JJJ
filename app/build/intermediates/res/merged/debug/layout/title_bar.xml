<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/title_red_bg"
    >
    
    <TextView 
        android:id="@+id/titlebar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新闻"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        />
    
    <ImageView 
        android:id="@+id/titlebar_iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_menu"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    
    <ImageView 
        android:id="@+id/titlebar_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        />
    
    <LinearLayout
        android:id="@+id/titlebar_ll_textsizeandshare" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        >
        <ImageView 
	        android:id="@+id/titlebar_iv_textsize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_textsize"
	        />
        <ImageView 
	        android:id="@+id/titlebar_iv_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_share"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        />
        <ImageView 
	        android:id="@+id/titlebar_iv_sh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/shoucang"
	        />
    </LinearLayout>
    
    
    <ImageView 
        android:id="@+id/titlebar_iv_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pic_list_type"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    
</RelativeLayout>
